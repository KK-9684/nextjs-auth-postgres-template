datasource db {
    provider = 'postgresql'
    url = env('DATABASE_URL')
}

/*
 * User model
 */
model User {
  id String @id @default(cuid())
  email String @unique
  emailVerified DateTime?
  password String
  name String?

  // everybody can signup
  @@allow('create', true)

  // can only be updated and deleted by self
  @@allow('read,update,delete', auth() == this)
  }
